{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "minds_iolite",
  "version": "0.1.0",
  "identifier": "mindsIolite",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "minds_iolite",
        "width": 1260,
        "height": 800,
        "minWidth": 1260,
        "minHeight": 800,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
